<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListOfF">


    <TextView
        android:id="@+id/counter_f"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/num_f"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:text="@string/counter_f_text"
        app:layout_constraintEnd_toStartOf="@+id/num_f"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/num_f"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/list_title_f"
        android:layout_toRightOf="@+id/list_title_f"
        android:text="@string/counter_f_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_title_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:text="@string/list_title_f"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/num_f"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView

        android:id="@+id/scrollView2"
        android:layout_width="350dp"
        android:layout_height="308dp"
        android:layout_centerInParent="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_title_f">

        <LinearLayout
            android:id="@+id/listOfF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/loadBanTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/scrollView2"
        android:clickable="true"
        android:focusable="true"
        android:onClick="addNewFToListOfF"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/star_big_on" />


    <RelativeLayout
        android:id="@+id/addAF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>


</RelativeLayout>