<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonetizedStats">

    <TextView
        android:id="@+id/label_num_banner_swiped"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:text="# of Banners Seen"
         />

    <TextView
        android:id="@+id/val_num_banner_swiped"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginLeft="210dp"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:text="NO" />

    <TextView
        android:id="@+id/label_num_videos_watched"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:text="# of Videos Watched" />

    <TextView
        android:id="@+id/val_num_videos_watched"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:text="no" />

    <TextView
        android:id="@+id/label_num_endless_scrolled"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:text="# of Scrolled Encounters" />

    <TextView
        android:id="@+id/val_num_endless_scrolled"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:text="N0000" />

</FrameLayout>